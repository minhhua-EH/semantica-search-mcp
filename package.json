{
  "name": "semantica-search-mcp",
  "version": "0.1.0",
  "description": "Codebase indexing and semantic code search using Vector DB and Embebdding model",
  "private": true,
  "type": "module",
  "bin": {
    "semantica-search-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@zilliz/milvus2-sdk-node": "^2.4.0",
    "axios": "^1.6.0",
    "fast-glob": "^3.3.0",
    "ignore": "^5.3.0",
    "openai": "^4.70.0",
    "p-limit": "^7.3.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-ruby": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "uuid": "^9.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.3"
  }
}
